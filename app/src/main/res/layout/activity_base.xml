<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Realm 数据库使用"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="初始化数据库"
            android:textAllCaps="false"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:onClick="onInit" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="创建或获取数据库"
            android:textAllCaps="false"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:onClick="onTest1" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="关闭数据库"
            android:textAllCaps="false"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:onClick="onTest2" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="查询数据"
            android:textAllCaps="false"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:onClick="onTest3" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="删除所有数据"
            android:textAllCaps="false"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:onClick="onTest4" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="插入数据1"
            android:textAllCaps="false"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:onClick="onTest5" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="插入数据2"
            android:textAllCaps="false"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:onClick="onTest6" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="更新数据"
            android:textAllCaps="false"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:onClick="onTest7" />

    </LinearLayout>
</ScrollView>